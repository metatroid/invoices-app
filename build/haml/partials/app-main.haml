.container
  .row
    .col-xs-12
      %nav.app-navigation{ui-view: "nav"}
  .row
    .app-container
      .col-md-2
        %aside.sidebar
          %a.btn.btn-default.btn-xs{href: "#"}
            %span.fa.fa-plus-square
            Add Project
            
      .col-md-10
        .row
          .project-additions
            .form-wrapper.project-form-wrapper
              %form.form.project-form{ng-submit: "createProject()"}
                .form-group
                  %input.form-control{type: "text", ng-model: "newProject.project_name", placeholder: "project name"}
                .form-actions
                  %ul.errors.text-danger{ng-if: "newProject.error != ''", ng-bind-html: "htmlSafe(newProject.error)"}
                  %button.btn.btn-default.btn-xs{type: "submit"}
                    %span.fa.fa-plus-square
                    Insert Project

        .row{ng-repeat: "project in projects"}
          .col-xs-12
            .project-wrapper{id: "project-{{project.id}}"}
              {{project.project_name}}