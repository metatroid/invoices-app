%main.main-app
  %nav.app-navigation{ui-view: "nav"}
  #projects.view-panel.active
    .container-fluid
      .row
        .col-xs-12
          %ul.project-list
            %li.project{ng-repeat: "project in projects"}
              .project-wrapper
                .project-icon
                  {{project.project_logo}}
                .project-info
                  .pull-right.project-settings
                    %ul.unstyled.inline
                      %li
                        %a.delete{href: "#", ng-click: "deleteProject(project.id)"}
                          %span.fa.fa-remove
                  .project-name
                    {{project.project_name}}
                  .project-client
                    {{project.client_name}}
                  .project-rate
                    Rate: {{project.hourly_rate}}
  #form.view-panel
    .container-fluid
      .row
        .col-xs-12
          .form-wrapper.project-form-wrapper
            %form.form.project-form{ng-submit: "createProject()"}
              .form-group
                %input.form-control{type: "text", ng-model: "newProject.project_name", placeholder: "project name"}
              .form-group
                %input.form-control{type: "url", ng-model: "project_url", placeholder: "project_url"}
              .form-group
                %textarea.form-control{type: "text", ng-model: "project_description", placeholder: "project_description"}
              .form-group
                %input.form-control{type: "text", ng-model: "client_name", placeholder: "client_name"}
              .form-group
                %input.form-control{type: "email", ng-model: "client_email", placeholder: "client_email"}
              .form-group
                %input.form-control{type: "datetime", ng-model: "deadline", placeholder: "deadline"}
              .form-group
                %input.form-control{type: "number", ng-model: "hourly_rate", placeholder: "hourly_rate"}
              .form-group
                %input.form-control{type: "number", ng-model: "fixed_rate", placeholder: "fixed_rate"}
              .form-group
                %input.form-control{type: "file", ng-model: "project_logo", placeholder: "project_logo"}
              .form-actions
                %ul.errors.text-danger{ng-if: "newProject.error != ''", ng-bind-html: "htmlSafe(newProject.error)"}
                %button.btn.btn-default.btn-xs{type: "submit"}
                  %span.fa.fa-plus-square
                  Insert Project