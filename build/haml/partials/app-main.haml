%nav.aside
  %ul.sidebar
    %li
      %a.active{href: "#", inreveal: "projects"}
        %span.fa.fa-tasks
    %li
      %a{href: "#"}
        %span.fa.fa-cog
    %li
      %a{href: "#"}
        %span.fa.fa-calendar
    %li
      %a{href: "#"}
        %span.fa.fa-code-fork
  .app-actions
    %a{href: "#", ng-click: "showNewProjectForm($event)"}
      %span.fa.fa-plus-square
      New Project
%main.main-app
  %md-toolbar
    %nav.app-navigation{ui-view: "nav"}
  #projects.view-panel.active
    %md-content
      %md-list.project-list
        %md-list-item.project{ng-repeat: "project in projects"}
          %img.md-avatar{ng-src: "{{project.project_logo}}", alt: "{{project.project_name}}"}
          .md-list-item-text{layout: "column"}
            .pull-right.project-settings
              %ul.unstyled.inline
                %li
                  %a.delete{href: "#", ng-click: "deleteProject(project.id)"}
                    %span.fa.fa-remove
            %h2
              {{project.project_name}}
            %h3
              {{project.client_name}}
            %ul.unstyled
              %li
                Rate: {{project.hourly_rate}}
              %li
                Time:
              %li
                Balance:


