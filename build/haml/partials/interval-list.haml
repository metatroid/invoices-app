%md-bottom-sheet
  %md-content
    %md-list.interval-list
      %md-subheader.md-no-sticky
        %strong
          Project: 
        {{ctrl.parent.project.project_name}}
      %md-list-item.interval.form{ng-repeat: "interval in ctrl.parent.intervals", id: "interval_{{interval.id}}"}
        .auto{layout: "row"}
          .inline-flex{flex: "90"}
            %div{flex: "33"}
              %md-input-container
                %label
                  Duration
                %input{ng-model: "interval.total"}
            %div{flex: "67"}
              %md-input-container
                %label
                  Description
                %input{ng-model: "interval.description"}
          .self-center{flex: "10"}
            .md-actions.borderless{layout: "row"}
              %md-button.md-icon-button{aria-label: "update", ng-click: "ctrl.parent.updateInterval(interval, $event, $index)"}
                %span.fa.fa-check-circle
              %md-button.md-icon-button{aria-label: "remove", ng-click: "ctrl.parent.deleteInterval(interval, $event, $index)"}
                %span.fa.fa-remove