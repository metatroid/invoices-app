%md-dialog#projectDialog{aria: "New Project"}
  %md-toolbar
    .md-toolbar-tools
      %h2
        create project
      %span{flex: "flex"}
      %md-button.md-icon-button{ng-click: "cancelProject()", aria-label: "Cancel"}
        %span.fa.fa-caret-down
  %md-dialog-content
    .form-wrapper.project-form-wrapper
      %form.form.project-form{ng-submit: "createProject()"}
        %md-content{layout-padding: "layout-padding", layout: "row", layout-sm: "column"}
          %md-input-container
            %label
              Project Name
            %input{ng-model: "newProject.project_name", required: "required"}
          %md-input-container
            %label
              Project URL
            %input{ng-model: "newProject.project_url"}
          %md-datepicker{ng-model: "newProject.deadline", md-placeholder: "Project Deadline"}
        %md-content{layout-padding: "layout-padding", layout: "row", layout-sm: "column"}
          %md-input-container.half
            %label
              Client Name
            %input{ng-model: "newProject.client_name"}
          %md-input-container.half
            %label
              Client Email
            %input{ng-model: "newProject.client_email"}
        %md-content{layout-padding: "layout-padding"}
          %md-input-container
            %label
              Project Description
            %textarea{ng-model: "newProject.project_description", columns: "1", md-maxlength: "350"}
        %md-content{layout-padding: "layout-padding", layout: "row", layout-sm: "column"}
          %md-input-container.half
            %label
              Hourly Rate
            %input{ng-model: "newProject.hourly_rate"}
          %md-input-container.half
            %label
              Fixed Rate
            %input{ng-model: "newProject.fixed_Rate"}
        %md-content{layout-padding: "layout-padding"}
          %md-input-container
            .file-upload-wrapper
              %input{type: "file", aria-label: "Project logo upload", ng-model: "newProject.project_logo", id: "project_logo", infilechange: "infilechange"}
              %label.md-no-float{for: "project_logo"}
                %span.fa.fa-upload
                %span.label
                  Project Logo
        %input{type: "hidden", ng-model: "newProject.user", ng-value: "user.id", value: "{{user.id}}", name: "user", required: "true"}
        .md-actions{layout: "row"}
          %ul.errors.text-danger{ng-if: "newProject.error != ''", ng-bind-html: "htmlSafe(newProject.error)"}
          %md-button.md-primary{type: "submit"}
            insert project