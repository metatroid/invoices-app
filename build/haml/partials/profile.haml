%md-content{layout-padding: "layout-padding", layout: "row", layout-sm: "column"}
  %md-input-container
    %label
      Full name
    %input{ng-model: "user.profile.fullname"}
  %md-input-container
    %label
      Username
    %input{ng-model: "user.username"}
  %md-input-container
    %label
      Email
    %input{ng-model: "user.email"}
%md-content{layout-padding: "layout-padding", layout: "row", layout-sm: "column"}
  %md-input-container
    %label
      Phone
    %input{ng-model: "user.profile.phone"}
  %md-input-container
    %label
      Address 1
    %input{ng-model: "user.profile.address_1"}
  %md-input-container
    %label
      Address 2
    %input{ng-model: "user.profile.address_2"}
%md-content{layout-padding: "layout-padding", layout: "row", layout-sm: "column"}
  %md-input-container.half
    %label
      Website
    %input{ng-model: "user.profile.website"}
  %md-input-container.half
    %label
      Default rate
    %input{ng-model: "user.profile.default_rate"}
%md-content{layout-padding: "layout-padding", layout: "row", layout-sm: "column"}
