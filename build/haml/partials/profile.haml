    %input{ng-model: "user.profile.invoice_theme"}
%md-content{layout-padding: "layout-padding"}
  %md-input-container
    .file-upload-wrapper
      %input{type: "file", aria-label: "User logo upload", id: "logo", infile: "user.profile.logo"}
      %label.md-no-float{for: "logo"}
        %span.fa.fa-upload
        %span.label
          Logo
.md-actions{layout: "row"}
  %md-button.md-primary{ng-click: "updateProfile(user)"}
    save settings